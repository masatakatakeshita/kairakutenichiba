<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true" />


	<package name="com.internousdev.kairakutenichiba.action" extends="struts-default">

		<!-- あああログインアクション、SUCCESSならindex.jsp、ERRORならlogin.jsp、loginならadmin_top.jspに遷移する -->
		<action name="LoginAction" class="com.internousdev.kairakutenichiba.action.LoginAction"
			method="execute">
			<result name="success">index.jsp</result>
			<result name="error">login_kato.jsp</result>
			<result name="login">admin_top_yama.jsp</result>
		</action>

		<!-- ログアウトアクション、SUCCESSならlogout_kato.jsp、ERRORならlogin.jspに遷移する -->
		<action name="LogoutAction" class="com.internousdev.kairakutenichiba.action.LogoutAction"
			method="execute">
			<result name="success">logout_kato.jsp</result>
			<result name="error">login_kato.jsp</result>
		</action>

		<!-- 商品詳細画面への遷移 -->
		<action name="GoItemDetailAction"
			class="com.internousdev.kairakutenichiba.action.GoItemDetailAction" method="execute">
			<result name="success">detail_yamaguchi.jsp</result>
			<result name="error">detail_yamaguchi.jsp</result>
			<result name="login">detail_yamaguchi.jsp</result>
		</action>

		<!-- カートに商品を追加する -->
		<action name="AddToCartAction" class="com.internousdev.kairakutenichiba.action.AddToCartAction"
			method="execute">
			<result name="success">cart_jo.jsp</result>
			<result name="error">login_kato.jsp</result>
			<result name="login">cart_jo.jsp</result>
		</action>

		<!-- カートに商品の数を増減する -->
		<action name="CartUpdateAction" class="com.internousdev.kairakutenichiba.action.CartUpdateAction"
			method="execute">
			<result name="success">cart_jo.jsp</result>
			<result name="error">cart_jo.jsp</result>
			<result name="login">cart_jo.jsp</result>
		</action>

		<!-- カート商品削除 -->
		<action name="CartDeleteAction" class="com.internousdev.kairakutenichiba.action.CartDeleteAction"
			method="execute">
			<result name="success">cart_jo.jsp</result>
			<result name="error">cart_jo.jsp</result>
			<result name="login">cart_jo.jsp</result>
		</action>

		<!-- カート画面への遷移 -->
		<action name="GoCartAction" class="com.internousdev.kairakutenichiba.action.GoCartAction"
			method="execute">
			<result name="success">cart_jo.jsp</result>
			<result name="error">cart_jo.jsp</result>
			<result name="login">cart_jo.jsp</result>
		</action>
		<!-- 支払い画面への遷移 -->
		<action name="GoSettlementAction"
			class="com.internousdev.kairakutenichiba.action.GoSettlementAction" method="execute">
			<result name="success">payment_takeshita.jsp</result>
			<result name="error">cart_jo.jsp</result>
			<result name="login">payment_takeshita.jsp</result>
		</action>

		<!-- 支払い画面。成功なら購入確認、エラーならクレジット情報の間違いのページに飛ぶ -->
		<action name="PaymentAction" class="com.internousdev.kairakutenichiba.action.PaymentAction"
			method="execute">
			<result name="success">check_shoji.jsp</result>
			<result name="error">payment_takeshita.jsp</result>
			<result name="login">check_shoji.jsp</result>
		</action>

		<!-- 購入確認画面。成功なら完了画面、在庫切れだったら在庫切れ画面に飛ぶ -->
		<action name="PurchaseCompleteAction"
			class="com.internousdev.kairakutenichiba.action.PurchaseCompleteAction"
			method="execute">
			<result name="success">finish_shoji.jsp</result>
			<result name="error">stocksError.jsp</result>
			<result name="login">finish_shoji.jsp</result>
		</action>

		<!-- 問い合わせ画面。問い合わせ完了画面に飛ぶ。必須が埋まってなかったらERRORで別ページ？ -->
		<action name="ContactAction" class="com.internousdev.kairakutenichiba.action.ContactAction"
			method="execute">
			<result name="success">helplink_togashi.jsp</result>
			<result name="error">help_togashi.jsp</result>
			<result name="login">helplink_togashi.jsp</result>
		</action>


		<!-- 管理者問い合わせ画面 -->
		<action name="AdminContactAction"
			class="com.internousdev.kairakutenichiba.action.AdminContactAction" method="execute">
			<result name="success">admin_help.jsp</result>
			<result name="error">admin_help.jsp</result>
			<result name="login">admin_help.jsp</result>
		</action>

		<!-- 管理者商品管理画面 -->
		<action name="AdminItemAction" class="com.internousdev.kairakutenichiba.action.AdminItemAction"
			method="execute">
			<result name="success">admin_item_yama.jsp</result>
			<result name="error">admin_item_yama.jsp</result>
			<result name="login">admin_item_yama.jsp</result>
		</action>

		<!-- 管理者商品管理画面 -->
		<action name="AdminAddAction" class="com.internousdev.kairakutenichiba.action.AdminAddAction"
			method="execute">
			<result name="success">admin_item_yama.jsp</result>
			<result name="error">admin_item_yama.jsp</result>
			<result name="login">admin_item_yama.jsp</result>
		</action>


		<!-- 管理者顧客情報 -->
		<action name="AdminUserAction" class="com.internousdev.kairakutenichiba.action.AdminUserAction"
			method="execute">
			<result name="success">admin_customer.jsp</result>
			<result name="error">admin_customer.jsp</result>
			<result name="login">admin_customer.jsp</result>


		</action>

		<!-- 管理者顧客購入情報 -->
		<action name="AdminHistoryAction"
			class="com.internousdev.kairakutenichiba.action.AdminHistoryAction" method="execute">
			<result name="success">admin_history_kato.jsp</result>
			<result name="error">admin_history_kato.jsp</result>
			<result name="login">admin_history_kato.jsp</result>
		</action>

		<!-- 管理者商品一覧 -->
		<action name="ItemAction" class="com.internousdev.kairakutenichiba.action.ItemAction"
			method="execute">
			<result name="success">admin_item_yama.jsp</result>
			<result name="error">admin_item_yama.jsp</result>
		</action>


		<!-- 購入履歴 -->
		<action name="UserPurchaseHistoryAction"
			class="com.internousdev.kairakutenichiba.action.UserPurchaseHistoryAction"
			method="execute">
			<result name="success">history_enju.jsp</result>
			<result name="error">history_enju.jsp</result>
			<result name="login">admin_history_kato.jsp</result>
		</action>



		<!-- Mypageの情報を表示させるアクション -->
		<action name="MyPageAction" class="com.internousdev.kairakutenichiba.action.MyPageAction"
			method="execute">
			<result name="success">account_enju.jsp</result>
			<result name="error">index.jsp</result>
			<result name="login">admin_customer.jsp</result>
		</action>


		<!-- トップサイトへ遷移するアクション -->
		<action name="MainTopAction" class="com.internousdev.kairakutenichiba.action.MainTopAction"
			method="execute">
			<result name="success">index.jsp</result>
			<result name="error">index.jsp</result>
			<result name="login">index.jsp</result>
		</action>


	</package>
</struts>